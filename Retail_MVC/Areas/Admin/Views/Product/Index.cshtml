@model List<Product>

<div class="container">
	<div class="row pt-4 pb-3">
		<div class="col-6">
			<h2 class="text-primary">Product List</h2>
		</div>
		<div class="col-6 text-end">
			<a asp-controller="Product" asp-action="Upsert" class="btn btn-primary">
				<i class="bi bi-plus-circle"></i>add product
			</a>
		</div>
	</div>
<table class="table table-bordered table-striped">
	<thead>
		<tr>
			<th>Product Name</th>
			<th>Description</th>
			<th>Price(Rs.)</th>
			<th>Category</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var v in Model)
		{
			<tr>
				<td>@v.Name</td>
				<td>@v.Description</td>
				<td>@v.Price</td>
				<td>@v.Category.Name</td>
				<td>
					<div class="w-75 btn-group" role="group">
						<a asp-controller="Product" asp-action="Upsert" asp-route-id="@v.Id" class="btn btn-primary mx-2">
							Edit
						</a>
							<a asp-controller="Product" asp-action="Delete" asp-route-id="@v.Id" class="btn btn-danger mx-2">
								Delete
							</a>

					</div>

				</td>
			</tr>
		}
	</tbody>
</table>
</div>