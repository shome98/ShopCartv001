@model Product

<form method="post">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Edit Product</h2>
			<hr />
		</div>
		<div class="mb-3 row p-1">
			<label class="p-0">Product Name</label>
			<input asp-for="Name" type="text" class="form-control" />
		</div>
		<div class="mb-3 row p-1">
			<label class="p-0">Description</label>
			<input asp-for="Description" type="text" class="form-control" />
		</div>
		<div class="mb-3 row p-1">
			<label class="p-0">Price</label>
			<input asp-for="Price" type="text" class="form-control" />
		</div>

		<div class="row">
			<div class="col-6 col-md-3">
				<button type="submit" class="btn btn-primary form-control">Delete</button>
			</div>
			<div class="col-6 col-md-3">
				<a asp-controller="Product" asp-index="Index" class="btn btn-secondary border form-control" style="width:150px">Back To List</a>
			</div>

		</div>

	</div>
</form>