@model ProductVM

<form method="post" enctype="multipart/form-data"> 
	<input asp-for="Product.Id" hidden />
	<input asp-for="Product.ImageUrl" hidden />

	<div class="row pb-2">
		<h2 class="text-primary">@(Model.Product.Id != 0 ? "Edit" : "Create") Product</h2>
		<hr />
	</div>
	<div class="row">

		<div class="col-10">
			<div class="border p-3 mt-4">

				<div class="mb-3 row p-1">
					<label class="p-0">Product Name</label>
					<input asp-for="Product.Name" type="text" class="form-control" />
				</div>
				<div class="mb-3 row p-1">
					<label class="p-0">Description</label>
					<input asp-for="Product.Description" type="text" class="form-control" />
				</div>

				<div class="mb-3 row p-1">
					<label class="p-0">Category</label>
					<select asp-for="Product.CategoryId" asp-items="@Model.CategoryList" class="form-control border-0 shadow">
						<option disabled selected>--Select Category--</option>
					</select>
				</div>

				<div class="mb-3 row p-1">
					<label class="p-0">Price</label>
					<input asp-for="Product.Price" type="text" class="form-control" />
				</div>

				<div class="mb-3 row p-1">
					<label class="p-0">Image URl</label>
					<input type="file" name="file" class="form-control" />
				</div>

				<div class="row">
					<div class="col-6 col-md-3">
						@if (Model.Product.Id != 0)
						{
							<button type="submit" class="btn btn-primary form-control">Update</button>
						}
						else
						{
							<button type="submit" class="btn btn-primary form-control">Create</button>
						}

					</div>
					<div class="col-6 col-md-3">
						<a asp-controller="Product" asp-index="Index" class="btn btn-secondary border form-control" style="width:150px">Back To List</a>
					</div>

				</div>

			</div>
		</div>
		<div class="col-2">
			<img src="@Model.Product.ImageUrl" 
				 style="width: 100px;height:100px;border-radius:5px;border:1px solid #bbb9b9" />
		</div>

	</div>
		




</form>